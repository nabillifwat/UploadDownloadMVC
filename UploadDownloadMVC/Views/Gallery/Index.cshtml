
@model List<string>
    <div class="container">
        @foreach (var path in Model)
        {
            <div class = "row">
                <div class="col-md-3">
                    <div class="alert alert-success" role="alert">
                        <a href="Gallery/Download/?filePath=@path">
                            <img src="~/@path" alt="@path" height="200px" width="200px"/>
                        </a>                        
                    </div>
                </div>
            </div>
        }
    @using (Html.BeginForm("Index","Gallery", FormMethod.Post, new {enctype = "multipart/form-data"}  ))
    {
        <div class="row">
            <div class="form-group col-md-6">
                <input type="file" class="form-control" name="myFile" />
            </div>
            <div class="form-group col-md-6">
                <input type="submit" class="filesubmit" name="upload" />
            </div>
        </div>
        
    }
</div>